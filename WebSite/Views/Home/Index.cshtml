@model HomeViewModel
@inject IViewLocalizer localizer
@inject SharedResourcesService shared_res
@{
	ViewData["Title"] = localizer["Title"];
}

<!-- Main -->
<section class="masthead img-fluid">
	<div class="container">
		<div class="intro-text">
			<div class="intro-lead-in">@localizer["Welcome"]</div>
			<div class="intro-heading title-font">@localizer["Name"]</div>
			<a class="btn btn-primary btn-xl" asp-controller="Home" asp-action="AddBot" rel="nofollow" target="_blank">@localizer["AddBot"]</a>
		</div>
	</div>
</section>

<!-- Stat -->
<section class="page-section" id="stat">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">@localizer["BotStatTitle"]</h2>
				<h3 class="section-subheading text-muted">@localizer["BotStatDesc"]</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-communities"></object>
				<h2>@localizer["BotStatServers"]</h2>
				<h1>200+</h1>
			</div>
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-users"></object>
				<h2>@localizer["BotStatUsers"]</h2>
				<h1>19500+</h1>
			</div>
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-raids"></object>
				<h2>@localizer["BotStatRaids"]</h2>
				<h1>7800+</h1>
			</div>
		</div>
	</div>
</section>

<!-- Features Grid -->
<section class="bg-light page-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">@localizer["FeatTitle"]</h2>
				<h3 class="section-subheading text-muted">@localizer["FeatDesc"]</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<ul class="timeline">
					<li>
						<div class="timeline-image">
							<img class="rounded-circle img-fluid" src="img/features/1.jpg" alt="">
						</div>
						<div class="timeline-panel">
							<div class="timeline-heading">
								<h4>@localizer["FeatOneTitle"]</h4>
							</div>
							<div class="timeline-body">
								<p class="text-muted">@localizer["FeatOneDesc"]</p>
							</div>
						</div>
					</li>
					<li class="timeline-inverted">
						<div class="timeline-image">
							<img class="rounded-circle img-fluid" src="img/features/2.jpg" alt="">
						</div>
						<div class="timeline-panel">
							<div class="timeline-heading">
								<h4>@localizer["FeatTwoTitle"]</h4>
							</div>
							<div class="timeline-body">
								<p class="text-muted">@localizer["FeatTwoDesc"]</p>
							</div>
						</div>
					</li>
					<li>
						<div class="timeline-image">
							<img class="rounded-circle img-fluid" src="img/features/3.jpg" alt="">
						</div>
						<div class="timeline-panel">
							<div class="timeline-heading">
								<h4>@localizer["FeatThreeTitle"]</h4>
							</div>
							<div class="timeline-body">
								<p class="text-muted">@localizer["FeatThreeDesc"]</p>
							</div>
						</div>
					</li>
					<li class="timeline-inverted">
						<div class="timeline-image">
							<img class="rounded-circle img-fluid" src="img/features/4.jpg" alt="">
						</div>
						<div class="timeline-panel">
							<div class="timeline-heading">
								<h4>@localizer["FeatFourTitle"]</h4>
							</div>
							<div class="timeline-body">
								<p class="text-muted">@localizer["FeatFourDesc"]</p>
							</div>
						</div>
					</li>
					<li class="timeline-inverted">
						<a asp-controller="Home" asp-action="BlackExodus" rel="nofollow" target="_blank">
							<div class="timeline-image">
								<h4>@localizer["Enjoy"]</h4>
							</div>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</section>