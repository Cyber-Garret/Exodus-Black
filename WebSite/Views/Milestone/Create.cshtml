@model Neiralink.Models.MilestoneInfo

@{
	ViewData["Title"] = "New milestone";
}
<div class="container margin-top-5">
	<h2>@ViewData["Title"]</h2>

	<form asp-action="Create" asp-controller="Milestone">
		<div>
			<div class="form-group">
				<label asp-for="Icon"></label>
				<input type="text" asp-for="Icon" class="form-control form-control-sm" />
			</div>
			<div class="form-group">
				<label asp-for="MaxSpace"></label>
				<input type="number" asp-for="MaxSpace" class="form-control  form-control-sm" />
			</div>
			<div class="form-group">
				<label asp-for="MilestoneType"></label>
				<select asp-for="MilestoneType" asp-items="Html.GetEnumSelectList<Neiralink.Models.MilestoneType>()"></select>
			</div>
			<div class="form-group">
				<label asp-for="Game"></label>
				<select asp-for="Game" asp-items="Html.GetEnumSelectList<Neiralink.Models.GameName>()"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-outline-secondary" />
			</div>
		</div>
	</form>

	<div>
		<a asp-controller="Milestone" asp-action="Index">Return to list</a>
	</div>
</div>