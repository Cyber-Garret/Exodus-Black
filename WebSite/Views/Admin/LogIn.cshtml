@model LoginViewModel
@{
	Layout = "_Admin";
	ViewData["Title"] = "Admin login";
}
<h2>Log in</h2>

<form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
	<div class="validation" asp-validation-summary="ModelOnly" />
	<div class="form-group">
		<label asp-for="UserName">Login</label>
		<input class="form-control" type="text" asp-for="UserName" />
		<span class="text-danger" asp-validation-for="UserName" />
	</div>
	<div class="form-group">
		<label asp-for="Password">Password</label>
		<input class="form-control" asp-for="Password" />
		<span class="text-danger" asp-validation-for="Password" />
	</div>
	<div class="form-group">
		<input type="submit" value="Let me in" class="btn btn-outline-primary" />
	</div>
</form>