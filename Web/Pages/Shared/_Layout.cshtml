@inject SharedResourcesService localizer
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - @localizer.Get("Name")</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
			<div class="container">
				<a class="navbar-brand" asp-page="Index">@localizer.Get("Name")</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link">@localizer.Get("Statistic")</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="http://docs.neira.su/" target="_blank">@localizer.Get("Docs")</a>
						</li>
						<li class="nav-item">
							<a class="nav-link">@localizer.Get("Donate")</a>
						</li>
					</ul>
				</div>
				<vc:culture-switcher />
			</div>
		</nav>
	</header>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2018-@DateTime.Now.Year - @localizer.Get("Name") - @localizer.Get("Dev") <a href="@localizer.BlackExodusInvite()" rel="nofollow" target="_blank">Cyber_Garret#5898</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
