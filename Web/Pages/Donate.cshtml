@page
@inject IStringLocalizer<DonateModel> localizer
@inject SharedResourcesService shared_res
@model Web.Pages.DonateModel
@{
	ViewData["Title"] = localizer["Title"];
	var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
	var requestCulture = requestCultureFeature.RequestCulture;
}

<!-- Main -->
<section class="serverhead img-fluid">
	<div class="container">
		<div class="intro-text">
			<div class="intro-heading title-font">@shared_res.Get("Name")</div>
		</div>
	</div>
</section>

<!-- Donate -->
<section class=" page-section" id="donate">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">@localizer["MainTitle"]</h2>
				<h3 class="section-subheading text-muted">@localizer["MainDesc"]</h3>
				<a class="btn btn-primary" href="@shared_res.YandexMoneyUrl()" rel="nofollow" target="_blank">@localizer["YM"]</a>
			</div>
		</div>
	</div>
</section>

