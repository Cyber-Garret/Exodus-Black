@page
@inject IStringLocalizer<IndexModel> localizer
@inject IHtmlLocalizer<IndexModel> htmlLocalizer
@inject SharedResourcesService shared_res
@model IndexModel
@{
	ViewData["Title"] = "Home page";
	var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
	var requestCulture = requestCultureFeature.RequestCulture;
}

<!-- Header -->
<header class="masthead img-fluid">
	<div class="container">
		<div class="intro-text">
			<div class="intro-lead-in">@localizer["Welcome"]</div>
			<div class="intro-heading title-font">@localizer["Name"]</div>
			<a class="btn btn-primary btn-xl" href="@shared_res.BotInvite()" rel="nofollow" target="_blank">@localizer["AddBot"]</a>
		</div>
	</div>
</header>

<!-- Stat -->
<section class="page-section" id="stat">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">@localizer["BotStatTitle"]</h2>
				<h3 class="section-subheading text-muted">@localizer["BotStatDesc"]</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-communities"></object>
				<h2>@localizer["BotStatServers"]</h2>
				<h1>200+</h1>
			</div>
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-users"></object>
				<h2>@localizer["BotStatUsers"]</h2>
				<h1>19500+</h1>
			</div>
			<div class="col-md-4">
				<object type="image/svg+xml" class="stat-raids"></object>
				<h2>@localizer["BotStatRaids"]</h2>
				<h1>7800+</h1>
			</div>
		</div>
	</div>
</section>

