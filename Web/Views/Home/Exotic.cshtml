@model IEnumerable<Core.Models.Db.Gear>

@{
	ViewData["Title"] = "Exotic";

}

<div class="text-center">
	<h1 class="display-4">Exotic</h1>

	<p>
		<a asp-action="Create">Create New</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Type)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IconUrl)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ImageUrl)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Type)
					</td>
					<td>
						<a href="@Html.DisplayFor(modelItem => item.IconUrl)">Иконка</a>
					</td>
					<td>
						<a href="@Html.DisplayFor(modelItem => item.ImageUrl)">Скриншот</a>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>