@model Web.ViewModels.ChangeRoleViewModel
@{ 
	ViewData["Title"] = "Права для пользователя";
}
<div class="container background">
	<h2>Изменение ролей для пользователя @Model.UserName</h2>

	<form asp-action="Edit" method="post">
		<input type="hidden" name="userId" value="@Model.UserId" />
		<div class="form-group">
			@foreach (NeiraRole role in Model.AllRoles)
			{
				<input type="checkbox" name="roles" value="@role.Name"
					   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.DisplayName <br />
				}
		</div>
		<button type="submit" class="btn btn-primary">Сохранить</button>
	</form>
</div>