@model IEnumerable<Core.Models.Db.Catalyst>

	@{
	ViewData["Title"] = "Катализаторы";
	}
	<div class="container-fluid background">
		<h1>@ViewData["Title"]</h1>
		@if (User.IsInRole("Admin"))
		{
		<p>
			<a class="btn btn-primary" asp-action="Create">Добавить</a>
		</p>
		}
		<table class="table table-sm table-hover">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.WeaponName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Icon)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.DropLocation)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Quest)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Masterwork)
					</th>
					@if (User.IsInRole("Admin"))
					{
					<th>Действия</th>
					}
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.WeaponName)
					</td>
					<td>
						<img src="@Html.DisplayFor(modelItem => item.Icon)" alt="Катализатор @Html.DisplayFor(modelItem=> item.WeaponName)" style="width:50px;" />
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DropLocation)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Quest)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Masterwork)
					</td>
					@if (User.IsInRole("Admin"))
					{
					<td>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
						<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Подробней</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
					</td>
					}
				</tr>
				}
			</tbody>
		</table>
	</div>
