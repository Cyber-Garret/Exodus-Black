@using WebSite.Helpers
@model IEnumerable<Fuselage.Models.Milestone>
@{
	Layout = "_Admin";
	ViewData["Title"] = "Milestone constructor";
	var counter = 1;
}

<div class="container">

	<h2>@ViewData["Title"]</h2>
	<p>
		<a class="btn btn-sm btn-primary" asp-action="Create">Add</a>
	</p>
	<hr />
	<table class="table table-hover">
		<tr>
			<th scope="col">#</th>
			<th scope="col">Icon</th>
			<th scope="col">Max users</th>
			<th scope="col">Type</th>
			<th scope="col">Actions</th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td class="font-weight-bold">@counter</td>
				<td>
					<img class="img-thumbnail" style="max-height: 5rem;" src="@item.Icon" />
				</td>
				<td>
					@item.MaxSpace
				</td>
				<td>
					@item.Type
				</td>
				<td>
					<div class="btn-group btn-group-sm">
						<a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</div>
				</td>
			</tr>
			counter++;
		}
	</table>

</div>