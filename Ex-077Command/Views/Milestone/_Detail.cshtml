@model Fuselage.Models.Milestone
<div class="modal-content">
	<div class="modal-header">
		<h4 class="modal-title" id="myModalLabel">Milestone #@Model.Id</h4>
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="modal-body">
		<div class="card-group">
			@if (Model.MilestoneLocales.Any())
			{
				@foreach (var locale in Model.MilestoneLocales)
				{
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">@locale.Name (@locale.Locale)</h5>
							<p class="card-text">Aliases: @locale.Alias</p>
							<p class="card-text"><small class="text-muted">@locale.Type</small></p>
							<a asp-action="EditLocale" asp-route-id="@locale.Id" class="card-link">Edit</a>
							<a asp-action="DeleteLocale" asp-route-id="@locale.Id" class="card-link text-danger">Delete</a>
						</div>
					</div>
				}
			}
			else
			{
				<h2>No data</h2>
			}
		</div>
	</div>
</div>