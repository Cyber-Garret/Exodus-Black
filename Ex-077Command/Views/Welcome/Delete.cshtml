@model Neiralink.Models.RandomWelcome
@{
	Layout = "_Admin";
	ViewData["Title"] = $"Delete welcome #{Model.RowID}";
}
<h2>@ViewBag.Title</h2>
<div>
	<dl class="dl-horizontal">
		<dt><label asp-for="EN"></label></dt>
		<dd>
			@Model.EN
		</dd>
		<dt><label asp-for="RU"></label></dt>
		<dd>
			@Model.RU
		</dd>
		<dt><label asp-for="UK"></label></dt>
		<dd>
			@Model.UK
		</dd>
	</dl>

	<div>
		<form asp-controller="Welcome" asp-action="Delete" method="post">
			<div class="form-group">
				<input class="btn btn-danger" type="submit" value="Delete" />
			</div>
		</form>
		<a class="float-right" asp-controller="Welcome" asp-action="Index">Return to list</a>
	</div>
</div>
