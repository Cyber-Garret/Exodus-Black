@inject SharedResourcesService res
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - @res.Get("Title")</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
			<div class="container">
				<a class="navbar-brand" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-controller="Home" asp-action="Index">
					<img src="~/img/neira.png" class="d-inline-block align-top" width="30" height="30" alt="Logo">
					@res.Get("Name")
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleMenu" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="navbarToggleMenu" class="navbar-collapse collapse">
					<ul class="navbar-nav text-capitalize ml-auto">
						<li class="nav-item">
							<a class="nav-link" href="http://docs.neira.app/" target="_blank">@res.Get("Docs")</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-controller="Home" asp-action="Donate">@res.Get("Donate")</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
	<!-- Footer -->
	<footer class="border-top footer text-muted">
		<div class="row">
			<div class="copyright col-sm-6">&copy; 2018-@DateTime.Now.Year - @res.Get("Dev") <a asp-controller="Home" asp-action="BlackExodus" rel="nofollow" target="_blank">Cyber_Garret#5898</a></div>
			<div class="col-sm-6 text-right">
				@await Html.PartialAsync("_SelectLanguagePartial")
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/main.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
