@model LoginViewModel
@{
	Layout = "_Admin";
	ViewData["Title"] = "Admin panel";
}

<div class="container">
	@if (!User.Identity.IsAuthenticated)
	{
		<h3 class="text-danger">Access denied</h3>
		<small class="text-muted">Try to login</small>
		<hr />
		<form asp-action="Index" asp-controller="Admin" asp-anti-forgery="true">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label asp-for="UserName">Login</label>
				<input class="form-control" type="text" asp-for="UserName" />
				<span class="text-danger" asp-validation-for="UserName" />
			</div>
			<div class="form-group">
				<label asp-for="Password">Password</label>
				<input class="form-control" asp-for="Password" />
				<span class="text-danger" asp-validation-for="Password" />
			</div>
			<div class="form-group">
				<input type="submit" value="Let me in" class="btn btn-outline-primary" />
			</div>
		</form>

		@section Scripts {
			<partial name="_ValidationScriptsPartial" />
		}
	}
	else
	{
		<h3 class="text-center">Admin panel</h3>
		<ul class="nav nav-tabs" id="myTab" role="tablist">
			<li class="nav-item" role="presentation">
				<a class="nav-link active" id="action-tab" data-toggle="tab" href="#action" role="tab" aria-controls="action" aria-selected="true">Actions</a>
			</li>
			<li class="nav-item" role="presentation">
				<a class="nav-link disabled" id="logs-tab" data-toggle="tab" href="#logs" role="tab" aria-controls="logs" aria-selected="false">Logs</a>
			</li>
		</ul>
		<div class="tab-content" id="myTabContent">
			<div class="tab-pane fade show active" id="action" role="tabpanel" aria-labelledby="action-tab">
				<div class="list-group list-group-flush">
					<a class="list-group-item list-group-item-action" asp-controller="Welcome" asp-action="Index">
						Random welcome editor
					</a>
					<a class="list-group-item list-group-item-action" asp-controller="Milestone" asp-action="Index">
						Milestone constructor
					</a>
					<a class="list-group-item list-group-item-action" asp-controller="Catalyst" asp-action="Index">
						Catalyst editor
					</a>
					<a class="list-group-item list-group-item-action disabled" tabindex="-1" aria-disabled="true">
						Exotic gear editor
					</a>
				</div>
			</div>
			<div class="tab-pane fade" id="logs" role="tabpanel" aria-labelledby="logs-tab">Under development</div>
		</div>
	}
</div>