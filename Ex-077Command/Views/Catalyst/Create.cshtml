@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@model Fuselage.Models.Catalyst

@{
	Layout = "_Admin";
	ViewData["Title"] = "New catalyst";
	var requestCulture = Context.Features.Get<IRequestCultureFeature>();
	var cultureItems = LocOptions.Value.SupportedUICultures
		.Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
		.ToList();
}

<div class="container">

	<h2>@ViewData["Title"]</h2>
	<hr />
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Locale"></label>
			<select asp-for="Locale" asp-items="cultureItems"></select>
		</div>
		<div class="form-group">
			<label asp-for="Icon"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="Icon" />
		</div>
		<div class="form-group">
			<label asp-for="Name"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="Name" />
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="Description" />
		</div>
		<div class="form-group">
			<label asp-for="DropLocation"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="DropLocation" />
		</div>
		<div class="form-group">
			<label asp-for="Objectives"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="Objectives" />
		</div>
		<div class="form-group">
			<label asp-for="Masterwork"></label>
			<input class="form-control  form-control-sm" type="text" asp-for="Masterwork" />
		</div>
		<div class="form-group">
			<input type="submit" value="Add" class="btn btn-outline-secondary" />
		</div>
	</form>

	<div class="float-right">
		<a asp-action="Index">Return to list</a>
	</div>

</div>