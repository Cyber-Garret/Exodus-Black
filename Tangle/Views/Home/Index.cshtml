@model IndexViewModel
@{
	ViewData["Title"] = "Home Page";
}

<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--4-col"></div>
	<div class="mdl-cell mdl-cell--4-col">
		<ul class="weapon-list-action mdl-list">
			@foreach (var weapon in Model.Weapons)
			{
				<li class="mdl-list__item mdl-list__item--two-line">
					<span class="mdl-list__item-primary-content">
						<img class="mdl-list__item-avatar" src="@weapon.Icon" />
						<span>@weapon.Name</span>
						<span class="mdl-list__item-sub-title">@weapon.Slot</span>
					</span>
					<span class="mdl-list__item-secondary-content">
						<span class="mdl-list__item-secondary-info">Perks</span>
						<button class="mdl-button mdl-js-button mdl-button--icon mdl-button--accent mdl-list__item-secondary-action">
							<i class="material-icons">assignment</i>
						</button>
					</span>
				</li>
			}
		</ul>
	</div>
	<div class="mdl-cell mdl-cell--4-col"></div>
</div>
